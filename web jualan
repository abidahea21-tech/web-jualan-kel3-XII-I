    <!-- Order Modal (Custom Dialog Box) --><div id="order-modal" class="fixed inset-0 hidden items-center justify-center z-50 modal-backdrop">
        <div class="bg-black galak-border rounded-xl p-8 max-w-lg w-11/12 galak-shadow border-red-600">
            <h4 id="modal-title" class="text-3xl font-black hero-title text-red-600 mb-4 text-center">KONFIRMASI ORDER</h4>
            <div id="modal-content" class="text-white">
                <!-- Content will be inserted by JS --></div>
            <div class="mt-6 text-center">
                <button onclick="closeOrderModal()" class="bg-gray-700 text-white font-bold py-2 px-6 rounded-lg transition duration-300 hover:bg-gray-600 hover:scale-105">
                    BATAL (Belum Siap)
                </button>
            </div>
        </div>
    </div>

    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Constants
        const PRICE_PER_PCS = 3000;
        const MODAL = document.getElementById('order-modal');
        const MODAL_CONTENT = document.getElementById('modal-content');

        /**
         * Opens the custom order modal with the selected variant information.
         * @param {HTMLElement} button - The button element that was clicked.
         */
        function openOrderModal(button) {
            const variant = button.getAttribute('data-variant');
            
            // Build the dynamic form/message
            MODAL_CONTENT.innerHTML = `
                <p class="text-lg mb-4">Anda memilih: <span class="text-red-500 font-extrabold">${variant}</span>.</p>
                
                <div class="mb-4">
                    <label for="quantity" class="block text-yellow-300 font-bold mb-2">JUMLAH (Berapa banyak nyali Anda?)</label>
                    <input type="number" id="quantity" value="1" min="1" oninput="calculateTotal()" class="w-full p-3 rounded-lg bg-gray-900 text-white border-2 border-red-600 focus:outline-none focus:ring-2 focus:ring-yellow-300" />
                </div>

                <p class="text-2xl font-black text-center mb-6">TOTAL HARGA: <span id="total-price" class="text-yellow-300">Rp 3.000</span></p>

                <p class="text-center font-bold text-red-500 mb-4">LANGKAH BERIKUTNYA:</p>
                <ol class="list-decimal list-inside text-left mx-auto max-w-xs space-y-2">
                    <li>Isi alamat Anda (di WhatsApp).</li>
                    <li>Transfer total harga ke E-Wallet (Gopay/OVO/DANA).</li>
                    <li>KIRIM BUKTI TRANSFER ke WA CS 0882-1105-2166.</li>
                </ol>
                <p class="text-center mt-4 text-sm text-gray-400">Anda akan diarahkan ke WhatsApp untuk pemesanan akhir.</p>
                
                <div class="mt-6 text-center">
                    <button onclick="sendWhatsappOrder('${variant}')" class="galak-red-bg text-black font-black py-3 px-8 rounded-xl transition duration-300 transform hover:scale-105">
                        LANJUT VIA WA!
                    </button>
                </div>
            `;
            
            // Calculate initial total
            calculateTotal();
            
            // Show the modal
            MODAL.classList.remove('hidden');
            MODAL.classList.add('flex');
        }

        /** Closes the custom order modal. */
        function closeOrderModal() {
            MODAL.classList.add('hidden');
            MODAL.classList.remove('flex');
        }

        /** Calculates and displays the total price based on quantity. */
        function calculateTotal() {
            const quantityInput = document.getElementById('quantity');
            const totalPriceSpan = document.getElementById('total-price');
            
            if (quantityInput && totalPriceSpan) {
                const quantity = parseInt(quantityInput.value) || 0;
                const total = quantity * PRICE_PER_PCS;
                
                // Format as IDR (simple prefix)
                totalPriceSpan.textContent = Rp ${total.toLocaleString('id-ID')};
            }
        }

        /** Prepares the WhatsApp message and closes the modal. */
        function sendWhatsappOrder(variant) {
            const quantityInput = document.getElementById('quantity');
            const quantity = parseInt(quantityInput.value) || 0;
            const total = quantity * PRICE_PER_PCS;

            const waNumber = '6288211052166'; // GANTI DENGAN NOMOR WA ANDA
            const message = *PESANAN TAHU JELETOT GALAK*\n\n +
                            *Varian:* ${variant}\n +
                            *Jumlah:* ${quantity} biji\n +
                            *Total Bayar:* Rp ${total.toLocaleString('id-ID')}\n\n +
                            Mohon isi detail untuk pengiriman:\n +
                            1. Nama:\n +
                            2. Alamat Lengkap:\n +
                            3. E-Wallet yang digunakan (Gopay/Ovo/Dana):\n\n +
                            Saya siap transfer, kirimkan nomor E-Wallet Anda!;

            const waLink = https://wa.me/${waNumber}?text=${encodeURIComponent(message)};
            
            // Redirect to WhatsApp
            window.open(waLink, '_blank');
            closeOrderModal();
        }

    </script>
